{
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "vitepress"
    ]
  },
  "include": [
    ".vitepress",
    "eslint.config.js"
  ]
}
